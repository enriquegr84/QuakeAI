<Actors>
	<!-- the basic version of a bed - a sleeping mat
		to facilitate upgrade path straw mat -> sleeping mat -> bed, this uses a nodebox-->
	<Actor type="node" name="cottages:sleeping_mat" description="sleeping mat">
		<ItemComponent>
			<DrawType>nodebox</DrawType>
			<ParamType>light</ParamType>
			<ParamType2>facedir</ParamType2>
			<Walkable>false</Walkable>
      <IsGroundContent>true</IsGroundContent>
			<SunlightPropagates>true</SunlightPropagates>
			<IsGroundContent>true</IsGroundContent>
			<InventoryImage>cottages_sleepingmat.png</InventoryImage>
			<WieldImage>cottages_sleepingmat.png</WieldImage>
			<Tiles>
				<Tile name="cottages_sleepingmat.png" />
			</Tiles>
			<Groups> 
				<AttachedNode>1</AttachedNode>
				<CreativeBreakable>1</CreativeBreakable>
			</Groups>
			<NodeBox>
				<Type>fixed</Type>
				<Fixed>
					{-0.48, -0.5,-0.48,  0.48, -0.45, 0.48}
				</Fixed>
			</NodeBox>
			<SelectionBox>
				<Type>fixed</Type>
				<Fixed>
					{-0.48, -0.5,-0.48,  0.48, -0.25, 0.48}
				</Fixed>
			</SelectionBox>
			<Sounds name="default.node_sound_leaves_defaults">
				<Footstep name="default_grass_footstep" gain="0.35"/>
				<Place name="default_place_node" gain="1.0"/>
				<Dug name="default_grass_footstep" gain="0.85"/>
				<Dig name="default_dig_crumbly" gain="0.4"/>
			</Sounds>
		</ItemComponent>
	</Actor>

